<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
	<hibernate-configuration>
		<session-factory>
		<!-- Connection Properties -->
			<property name="hibernate.connection.driver.class">oracle.jdbc.driver.OracleDriver</property>
			<property name="hibernate.connection.driver.class">jdbc.oracle.thin:@localhost:1521:xe</property>
			<property name="hibernate.connection.driver.class">system</property>
			<property name="hibernate.connection.driver.class">manager</property>
			<!-- mapping file -->
			<mapping resource="com/coderefer/entity/Product.hbm.xml"/>
		</session-factory>
	</hibernate-configuration>